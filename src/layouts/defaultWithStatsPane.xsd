<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	
	<screen id="start">
		<layer childLayout="vertical">
			<panel id="main_text_panel_container" childLayout="vertical" backgroundColor="#f008" padding="20px" height="75%" width="100%">
				<control id="main_text_scrollbar" name="scrollPanel" horizontal="false" height="100%">
					<panel id="main_text_panel" childLayout="vertical" backgroundColor="#f008" width="700px" height="1000px">
						<text id="main_text" wrap="true" font="aurulent-sans-16.fnt" color="#000000"
							text="Hello &#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;
							&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;
							&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;
							&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;&#xA;
							World!" />
					</panel>
				</control>
			</panel>
			
			<panel childLayout="horizontal" backgroundColor="#000000">
				<panel id="navigation_panel" childLayout="vertical" backgroundColor="#ffff">
					<panel childLayout="horizontal">
						<panel id="northwest" childLayout="center" />
						<panel childLayout="center">
							<control id="north" type="button" width="80%" height="80%" label="North"></control>
						</panel>
						<panel id="northeast" childLayout="center" />
					</panel>
					
					<panel childLayout="horizontal">
						<panel childLayout="center">
							<control id="west" type="button" width="80%" height="80%" label="West"></control>
						</panel>
						<panel childLayout="center">
							<control id="center" type="button" width="80%" height="80%" label="Center"></control>
						</panel>
						<panel childLayout="center">
							<control id="east" type="button" width="80%" height="80%" label="East"></control>
						</panel>
					</panel>
					
					<panel childLayout="horizontal">
						<panel id="southwest" />
						<panel childLayout="center">
							<control id="south" type="button" width="80%" height="80%" label="South"></control>
						</panel>
						<panel id="southeast" childLayout="center" />
					</panel>
				</panel>
				
				<panel id="stats_panel" childLayout="vertical" backgroundColor="#000000" width="30%" paddingLeft="2px">
					<panel id="row1" width="100%" height="25%" childLayout="horizontal" backgroundColor="#ffff">
						<text id="row1_label" width="50%" height="100%" color="#000000" font="aurulent-sans-16.fnt"
							text="row1 label" />
						<text id="row1_text" width="50%" height="100%" color="#000000" font="aurulent-sans-16.fnt"
							text="row1 text" />
					</panel>
					
					<panel id="row2" width="100%" height="25%" childLayout="horizontal" backgroundColor="#ffff">
						<text id="row2_label" width="50%" height="100%" color="#000000" font="aurulent-sans-16.fnt"
							text="row2 label" />
						<text id="row2_text" width="50%" height="100%" color="#000000" font="aurulent-sans-16.fnt"
							text="row2 text" />
					</panel>
					
					<panel id="row3" width="100%" height="25%" childLayout="horizontal" backgroundColor="#ffff">
						<text id="row3_label" width="50%" height="100%" color="#000000" font="aurulent-sans-16.fnt"
							text="row3 label" />
						<text id="row3_text" width="50%" height="100%" color="#000000" font="aurulent-sans-16.fnt"
							text="row3 text" />
					</panel>
					
					<panel id="row4" width="100%" height="25%" childLayout="horizontal" backgroundColor="#ffff">
						<text id="row4_label" width="50%" height="100%" color="#000000" font="aurulent-sans-16.fnt"
							text="row4 label" />
						<text id="row4_text" width="50%" height="100%" color="#000000" font="aurulent-sans-16.fnt"
							text="row4 text" />
					</panel>
				</panel> 
				
			</panel>
		</layer>
	</screen>
</nifty>
